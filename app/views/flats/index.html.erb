<div class="container my-5">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-lg rounded-3">
          <% if flat.picture_url.present? %>
            <img src="<%= flat.picture_url %>" class="card-img-top" alt="<%= flat.name %>">
          <% else %>
            <img src="https://via.placeholder.com/300" class="card-img-top" alt="<%= flat.name %>">
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary mb-3"><%= flat.name %></h5>
            <p class="text-secondary mb-1"><strong>Address:</strong> <%= flat.address %></p>
            <p class="text-secondary mb-3"><strong>Category:</strong> <%= flat.description %></p>
            <p class="text-secondary mb-3"><strong>Price per night:</strong> $<%= flat.price_per_night %></p>
            <p class="text-secondary mb-3"><strong>Guests:</strong> <%= flat.number_of_guests %></p>
            <div class="mt-auto">
              <%= link_to "View Details", flat_path(flat), class: "btn btn-outline-primary btn-lg w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
