<div class="container my-5">
  <!-- Flat Image -->
  <% if @flat.picture_url.present? %>
    <div class="text-center mb-4">
      <img src="<%= @flat.picture_url %>" class="img-fluid rounded shadow-lg" alt="<%= @flat.name %>" style="max-height: 400px; object-fit: cover;">
    </div>
  <% end %>

  <!-- Flat Details -->
  <div class="text-center">
    <h1 class="text-primary display-4 mb-3"><%= @flat.name %></h1>
    <p class="lead text-secondary"><i class="fas fa-map-marker-alt me-2"></i><%= @flat.address %></p>
    <p class="text-secondary mb-4"><%= @flat.description %></p>
    <p class="h5 text-dark"><strong>Price per night:</strong> $<%= @flat.price_per_night %></p>
    <p class="h5 text-dark"><strong>Max Guests:</strong> <%= @flat.number_of_guests %></p>
  </div>

  <!-- Action Buttons -->
  <div class="d-flex justify-content-center gap-2 mt-5">
    <%= link_to "Back to All Flats", flats_path, class: "btn btn-outline-primary btn-lg" %>
    <%= link_to "Edit Flat", edit_flat_path(@flat), class: "btn btn-outline-primary btn-lg" %>
    <%= link_to "Delete Flat",
      flat_path(@flat),
      data: { turbo_method: "DELETE", turbo_confirm: "Are you sure you want to delete this flat?" },
      class: "btn btn-danger btn-lg" %>
  </div>
</div>
